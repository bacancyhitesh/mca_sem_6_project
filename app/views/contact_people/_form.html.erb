<!-- Ketan -->
<%=form_for @contact_person do |f|  %>

<center><h3>Contact Person</h3></center>
<center>
  <div class="form-group">
    <%=f.label("Select Company" ,class:"col-sm-2 control-label") %>
    <div class="col-sm-8">
      <%= f.collection_select(:company_id, current_employer.companies, :id, :name,{ include_blank: false }, class: "form-control") %>
    </div>
  </div>
  <br>
  <br>
  <div class="form-group">
    <%=f.label("Enter First Name",class: "col-sm-2 control-label")%>
    <div class="col-sm-8">
      <%=f.text_field :first_name,class:"form-control"%>
    </div>
  </div>
  <br>
  <br>
  <div class="form-group">
    <%=f.label("Enter Last Name" ,class:"col-sm-2 control-label") %>
    <div class="col-sm-8">
      <%=f.text_field :last_name,class:"form-control"%>
    </div>
  </div>
  <br>
  <br>

  <div class="form-group">
    <%=f.label("Enter Contact" ,class:"col-sm-2 control-label") %>
    <div class="col-sm-8">
      <%=f.text_field :contact,class:"form-control"%>
    </div>
  </div>
  <br>
  <br>

  <div class="form-group">
    <%=f.label("Enter Email" ,class:"col-sm-2 control-label") %>
    <div class="col-sm-8">
      <%=f.email_field :email,class:"form-control"%>
    </div>
  </div>
  <br><br>

  <div class="form-group">
  <%=f.label("Enter Role" ,class:"col-sm-2 control-label") %>
    <div class="col-sm-8">
      <%= f.collection_select(:role_id, Role.all, :id, :name,{ include_blank: false }, class: "form-control") %>
    </div>
  </div>
  <br><br>
  <div class="form-group">
    <div class="col-sm-8">
      <%= f.submit class: "btn btn-success btn-mini"%>
    </div>
  </div>
  <br><br>
</center>
<%end%>
