<% if request.fullpath.include?('user') %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <% if f.object.new_record?%>

  <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true,class:"form-control",required: true %>
  </div>

  <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true,class:"form-control",required: true %>
  </div>

    <div class="form-group">
      <%= f.label :password %><br />
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off",class:"form-control",required: true %>
  </div>

<div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control",required: true %>
  </div>

  <div class="form-group">
      <%= f.label  "Contact number" %><br />
      <%= f.text_field :contactnumber, autofocus: true,class:"form-control",required: true %>
  </div>

  <div class="form-group">

      <%= f.label  "Has Experiance :" %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
       <%=f.radio_button(:hasexp, "true")%>YES&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%=f.radio_button(:hasexp, "false")%>NO
    </div>

  <div class="form-group">
      <%= f.label  "Upload Resume" %><br />
      <%= f.file_field :resume, autofocus: true,class:"form-control" %>
  </div>
  <div class="form-group">
    <div class="col-xs-4 col-md-3 "><%= f.submit "Submit", class:"btn btn-primary btn-block btn-lg", tabindex:"7" %></div>
      </div>

<!-- here is the  Edit Part of the User Details -->
  <% else %>
<div class="form-group">
  <div class="panel panel-success">
        <div class="panel-heading">Personal Informaion</div>
              <div class="panel-body">
                 <div class="form-group">
                     <%= f.label :name %><br />
                     <%= f.text_field :name, autofocus: true,class:"form-control" %>
                 </div>
                 <div class="form-group">
                     <%= f.label :email %><br />
                     <%= f.email_field :email, autofocus: true,class:"form-control" %>
                 </div>
                 <div class="form-group">
                     <%= f.label :contactnumber,"Contact number" %><br />
                     <%= f.text_field :contactnumber, autofocus: true,class:"form-control" %>
                 </div>

                       <div class="form-group">
                        <%= f.label  "Has Experiance :" %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                         <%=f.radio_button(:hasexp, "true")%>YES&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                          <%=f.radio_button(:hasexp, "false")%>NO
                      </div>

                   <div class="form-group">
                       <%= f.label :dob,"Date of Birth : " %><br />
                       <%= f.date_field(:date_of_birth)%>
                  </div>

                  <div class="form-group">
                   <%= f.label  "Gender : " %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <%=f.radio_button(:gender, "Male")%>Male&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                     <%=f.radio_button(:gender, "Female")%>Female
                 </div>
                 <div class="form-group">
                  <%= f.label  "Marital Status : " %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                   <%=f.radio_button(:marital_status, "true")%>Married&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <%=f.radio_button(:marital_status, "false")%>Un-married
                </div>
              </div>
            </div>
<div class="panel panel-info">
      <div class="panel-heading">Mailing Details</div>
            <div class="panel-body">
                    <div class="form-group">
                        <%= f.label :address,"Permanent Address " %><br />
                        <%= f.text_area :address, autofocus: true,class:"form-control" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :city,"HomeTown / City" %><br />
                        <%= f.select :city, Location.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, class:"input-small form-control" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :pincode,"Pincode :" %><br />
                        <%= f.text_field :pincode, autofocus: true,class:"form-control" %>
                    </div>
            </div>
</div>
<div class="form-group">
  <div class="col-xs-4 col-md-3 "><%= f.submit "Submit", class:"btn btn-primary btn-block btn-lg", tabindex:"7" %></div>
    </div>
  <% end %>

<% end %>

